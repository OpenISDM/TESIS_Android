<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/eqlist_ml"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="1sp"
        android:layout_marginRight="3sp"
        android:gravity="center"
        android:text="5.3"
        android:textAppearance="@style/DrawerListText1Color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/eqlist_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2014-05-04 20:43:00"
                android:textAppearance="@style/DrawerListText2Color" />

            <TextView
                android:id="@+id/eqlist_timezone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:text="Taipei time"
                android:textAppearance="@style/DrawerListText3Color" />

        </LinearLayout>

        <TextView
            android:id="@+id/eqlist_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="花蓮縣政府北偏東方28.5公里"
            android:maxLines="2"
            android:textAppearance="@style/DrawerListText4Color" />

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/eqlist_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="震央距離現在位置:200公里"
                android:textAppearance="@style/DrawerListText5Color" />

            <TextView
                android:id="@+id/eqlist_new"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="5dp"
                android:layout_alignParentRight="true"
                android:text="new"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textStyle="bold|italic"
                android:textColor="@color/red"
                android:visibility="invisible" />

        </RelativeLayout>
    </LinearLayout>

</LinearLayout><!-- From: file:/Users/developer/Dropbox/TESIS.v3/res/layout/drawer_list_item.xml -->